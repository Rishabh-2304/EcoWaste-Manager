HF_MODEL_ID=google/vit-base-patch16-224

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/ecowaste

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
